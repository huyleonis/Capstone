<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    tools:context="fpt.capstone.ats.fragments.ChoosePaymentMethodFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:onClick="clickToChooseMethod"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:tag="mobicard">

        <TextView
            android:id="@+id/textMobicard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="clickToChooseMethod"
            android:tag="mobicard"
            android:text="Thẻ cào điện thoại"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.42"
            android:onClick="clickToChooseMethod"
            android:scaleType="fitXY"
            android:tag="mobicard"
            app:srcCompat="@drawable/the_dien_thoai" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:onClick="clickToChooseMethod"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:tag="banking">

        <TextView
            android:id="@+id/textBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="clickToChooseMethod"
            android:tag="banking"
            android:text="Tài khoản ngân hàng"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickToChooseMethod"
            android:scaleType="fitXY"
            android:tag="banking"
            app:srcCompat="@drawable/tk_ngan_hang" />
    </LinearLayout>
</LinearLayout>
