<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutListCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fpt.capstone.ats.fragments.ChooseCardFragment">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:adjustViewBounds="false"
        android:background="@drawable/border"
        android:onClick="clickToChooseCard"
        android:scaleType="fitCenter"
        android:tag="Mobiphone"
        app:srcCompat="@drawable/mobiphone" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@drawable/border"
        android:onClick="clickToChooseCard"
        android:scaleType="fitCenter"
        android:tag="Viettel"
        app:srcCompat="@drawable/viettel" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@drawable/border"
        android:onClick="clickToChooseCard"
        android:scaleType="fitCenter"
        android:tag="Vinaphone"
        app:srcCompat="@drawable/vinaphone" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:adjustViewBounds="false"
        android:background="@drawable/border"
        android:cropToPadding="false"
        android:onClick="clickToChooseCard"
        android:scaleType="fitCenter"
        android:tag="Vcoin"
        app:srcCompat="@drawable/vcoin" />
</LinearLayout>
