<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="fpt.capstone.ats.activities.InitialActivity">

    <ImageView
        android:id="@+id/imgLogo1"
        android:layout_width="141dp"
        android:layout_height="153dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toTopOf="@+id/textSystemName"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textSystemName"
        android:layout_width="243dp"
        android:layout_height="83dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Automation Tollbooth System"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtIpConfig"
        android:layout_width="206dp"
        android:layout_height="39dp"
        android:layout_marginBottom="120dp"
        android:background="#b4ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="192.168."

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="5dp"
        android:fontFamily="sans-serif-condensed"
        android:text="https://"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/edtIpConfig"
        app:layout_constraintRight_toLeftOf="@+id/edtIpConfig"
        android:layout_marginEnd="5dp" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="0dp"
        android:onClick="clickToContinue"
        android:text="Tiếp tục"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/edtIpConfig"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="0dp"
        android:text="Kiểm tra"
        android:onClick="clickToCheckConnection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/edtIpConfig" />
</android.support.constraint.ConstraintLayout>
